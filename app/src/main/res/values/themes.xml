<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Medialab" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00497D</item>
        <item name="colorPrimaryVariant">#FF6500</item>
        <item name="colorOnPrimary">#E2E2E2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/transparent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.Orange"  parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/orange</item>
    </style>

    <style name="Theme.Medialab.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Medialab.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Medialab.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
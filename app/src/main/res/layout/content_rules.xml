    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/rules_header"
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Voordat u van uw dag gaat genieten, willen wij u even op een aantal punten wijzen."
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/rules_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:id="@+id/rule_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rule_2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="\u25CF \u0009"
                android:gravity="center_vertical"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Spreek met uw kind af waar de Rudy hotspots zich bevinden."
                android:gravity="center_vertical"
            />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rule_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/rule_1"
            app:layout_constraintBottom_toTopOf="@id/rule_3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="\u25CF \u0009"
                android:gravity="center_vertical"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Zorg dat u het nummer dat u zo dadelijk ontvangt zo duidelijk mogelijk op het armbandje schrijft."
                android:gravity="center_vertical"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rule_3"
            app:layout_constraintBottom_toTopOf="@id/rule_4"
            app:layout_constraintTop_toBottomOf="@id/rule_2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="\u25CF \u0009"
                android:gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Raak niet in paniek als uw kind kwijt is, maar stuur zo snel mogelijk een melding via de app."
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rule_4"
            app:layout_constraintTop_toBottomOf="@id/rule_3"
            app:layout_constraintBottom_toTopOf="@id/rule_5"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="\u25CF \u0009"
                android:gravity="center_vertical"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Wanneer u een melding stuurt of ontvangt, deel dan uw livelocatie zodat u weet waar Rudy is, en Rudy weet waar u bent."
                android:gravity="center_vertical"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/rule_5"
            app:layout_constraintTop_toBottomOf="@id/rule_4"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="\u25CF \u0009"
                android:gravity="center_vertical"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Maak voor uzelf een foto van uw kind zodat u later nog weet wat hij of zij aan heeft."
                android:gravity="center_vertical"
            />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>